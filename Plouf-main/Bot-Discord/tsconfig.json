{
    "compilerOptions": {
      "target": "es6",
      "module": "ESNext",
      "lib": ["es2016", "dom"],
      "rootDir": "./typescript",
      "outDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "declaration": true,
      "declarationDir": "./types"
    },
    "include": [
      "typescript/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts"
    ]
  }